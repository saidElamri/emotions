# sentiment-backend/Dockerfile.test

# Use a slim Python image as a base
FROM python:3.12-slim

# Install build dependencies for Python packages with C extensions.
# This is crucial for libraries like `bcrypt`, which need to compile C code
# to function correctly and avoid internal `passlib` errors like
# "password cannot be longer than 72 bytes".
RUN apt-get update && \
    apt-get install -y --no-install-recommends gcc python3-dev && \
    rm -rf /var/lib/apt/lists/*

# Set the working directory in the container
WORKDIR /app

# Copy only the requirements file first to leverage Docker cache
COPY requirements.txt .

# Install application dependencies, including `passlib` and `bcrypt`
RUN pip install --no-cache-dir -r requirements.txt

# Install testing dependencies
RUN pip install --no-cache-dir pytest

# Copy the rest of the application code and the test suite
COPY . .

# This CMD is typically for running the application, but for testing,
# we will override it with a command to run pytest.
CMD ["uvicorn", "app.main:app", "--host", "0.0.0.0", "--port", "8000"]

